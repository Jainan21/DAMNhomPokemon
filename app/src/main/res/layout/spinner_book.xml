<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="100dp"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/nhagiakim"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/spin_txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"

            android:text="Nhà giả kim"
            android:fontFamily="serif"/>
        <TextView
            android:id="@+id/spin_txtAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:layout_marginBottom="10dp"
            android:text="Paulo Coelho"/>
        <TextView
            android:id="@+id/spin_txtPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="135.000VND"
            android:textStyle="bold"
            android:fontFamily="serif"/>
        <TextView
            android:id="@+id/spin_txtRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:fontFamily="serif"
            android:text="4.5/5"/>

    </LinearLayout>



</LinearLayout>