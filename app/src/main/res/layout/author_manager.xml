<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:padding="10dp"
        android:layout_marginHorizontal="28dp"
        android:background="#F8F1F1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMemberAuthorManager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="1"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgAuthorManager"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/avata" />

        <TextView
            android:id="@+id/tvNameAuthorManager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:text="De nÃ­t xe"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btDeleteAuthorManager"
            android:layout_width="36dp"
            android:layout_height="29dp"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/baseline_cancel_24" />


    </LinearLayout>

</LinearLayout>