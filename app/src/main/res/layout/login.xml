<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:background="#ECD8F2"
    tools:context=".login">

    <ImageView
        android:id="@+id/LogoLogin"
        android:layout_width="352dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/logo_app" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/round_background"
        android:gravity="center"
        android:layout_marginHorizontal="28dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt1Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="Chào mừng đến với BookPocket, vui lòng đăng nhập"
            android:textColor="#717086"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconavartar"
                android:layout_width="35dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/user" />

            <EditText
                android:id="@+id/edtUsernameLogin"
                android:layout_width="257dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="Tên đăng nhập"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconlock"
                android:layout_width="35dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/lock" />

            <EditText
                android:id="@+id/edtPasswordLogin"
                android:layout_width="258dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="Mật khẩu"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnLogin"
                android:background="@drawable/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="40dp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:text="Đăng nhập"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt2Login"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="3dp"
                    android:text="Bạn chưa có tài khoản đăng ký?"
                    android:textColor="#717086" />

                <TextView
                    android:id="@+id/txtRregister"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="3dp"
                    android:text="Đăng ký"
                    android:textColor="#0D00FF" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>