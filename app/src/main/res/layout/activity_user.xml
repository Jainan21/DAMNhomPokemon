<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#ffffff"
    >


    <!-- Nội dung chính của màn hình -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/avata"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:background="@drawable/circular_image_shape"
            android:clipToOutline="true"/>

        <!-- Phần header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/btBack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tài khoản"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp" />
            <ImageView
                android:id="@+id/btMenu"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:clickable="true"
                android:src="@drawable/img"
                android:layout_gravity="end" />
        </LinearLayout>

        <!-- Thông tin tài khoản -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/avata"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:background="@drawable/circular_image_shape"
                android:clipToOutline="true"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtname_acc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kateruku"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtemail_acc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kater@gmail.com"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Số dư:" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 0 VND"
                        android:textColor="#A025CB" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Menu tài khoản -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/holo_purple"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/change_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:clickable="true"
                android:text="Đổi thông tin tài khoản"
                android:textColor="@android:color/white"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:clickable="true"
                android:text="Đổi mật khẩu"
                android:textColor="@android:color/white"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/transaction_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:clickable="true"
                android:text="Lịch sử giao dịch"
                android:textColor="@android:color/white"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:onClick="openDrawer" />

            <TextView
                android:id="@+id/tvrechar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:clickable="true"
                android:text="Nạp tiền"
                android:textColor="@android:color/white"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/tvwithd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:clickable="true"
                android:text="Rút tiền"
                android:textColor="@android:color/white"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng xuất"
            android:textColor="@android:color/white"
            android:backgroundTint="#a285ff"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="16dp" />
    </LinearLayout>

    <!-- Bố cục ngăn kéo (màn hình lịch sử giao dịch) -->
    <LinearLayout
        android:id="@+id/drawer_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:layout_gravity="start">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lịch sử giao dịch"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"
            android:layout_marginTop="20dp"
            android:textColor="#9b59b6"
            android:background="#f3e5f5"
            android:padding="8dp" />

        <!-- Mục lịch sử giao dịch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fafafa"
            android:elevation="2dp"
            android:padding="16dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CÂY CAM NGỌT..."
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tác giả: JOSÉ MAURO DE..."
                android:textSize="12sp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- 120.000VND"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="27/06/2024"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:paddingBottom="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fafafa"
            android:elevation="2dp"
            android:padding="16dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CÂY CAM NGỌT..."
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tác giả: JOSÉ MAURO DE..."
                android:textSize="12sp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- 120.000VND"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="27/06/2024"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:paddingBottom="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fafafa"
            android:elevation="2dp"
            android:padding="16dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CÂY CAM NGỌT..."
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tác giả: JOSÉ MAURO DE..."
                android:textSize="12sp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- 120.000VND"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="27/06/2024"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:paddingBottom="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fafafa"
            android:elevation="2dp"
            android:padding="16dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CÂY CAM NGỌT..."
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tác giả: JOSÉ MAURO DE..."
                android:textSize="12sp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- 120.000VND"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="27/06/2024"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:paddingBottom="16dp" />
        </LinearLayout>
        <!-- Lặp lại mục lịch sử giao dịch theo nhu cầu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fafafa"
            android:elevation="2dp"
            android:padding="16dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CÂY CAM NGỌT..."
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tác giả: JOSÉ MAURO DE..."
                android:textSize="12sp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- 120.000VND"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="27/06/2024"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:paddingBottom="16dp" />
        </LinearLayout>
    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>
