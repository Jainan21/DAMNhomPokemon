<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ECD8F2"
    tools:context=".bookdetails">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ECD8F2"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/button1"
            android:layout_width="35dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="before"
            android:drawableLeft="@drawable/before" />

        <TextView
            android:id="@+id/myTextView"
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:contentDescription="ChiTiet"
            android:text="Chi tiết sách"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:contentDescription="menu"
            android:drawableRight="@drawable/menu"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="659dp"
        android:background="@drawable/round_background"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="173dp"
            android:layout_margin="10dp"
            android:background="@drawable/corner_register_view"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="107dp"
                android:layout_height="126dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/nhagiakim" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="177dp"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hb_txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="serif"
                    android:text="Nhà giả kim"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/hb_txtAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="Paulo Coelho"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/hb_txtContent"
                    android:layout_width="210dp"
                    android:layout_height="71dp"
                    android:layout_marginRight="10dp"
                    android:contentDescription="Mô tả nội dung cuốn sách xoay quanh câu chuyện cậu bé chăn cừu Santiago và cuộc hành trình đi tìm kho báu của cậu."
                    android:text="Nội dung cuốn sách xoay quanh câu chuyện cậu bé chăn cừu Santiago và cuộc hành trình đi tìm kho báu của cậu." />

                <TextView
                    android:id="@+id/hb_txtPrice"
                    android:layout_width="209dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="18dp"
                    android:fontFamily="serif"
                    android:gravity="right"
                    android:text="135.000VND"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>