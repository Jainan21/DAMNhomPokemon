<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="110dp"
            android:layout_height="140dp"
            app:srcCompat="@drawable/nhagiakim" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NHÀ GIẢ KIM"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tác giả: "
                android:textSize="15dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paulo Coelho"
                android:textSize="15dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thể loại: "
                android:textSize="15dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tvTheLoai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phiêu lưu, tưởng tượng"
                android:textSize="15dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btDelete"
                android:layout_width="115dp"
                android:layout_height="35dp"
                android:background="@drawable/stblack"
                android:drawableLeft="@drawable/delete"
                android:paddingLeft="30dp"
                android:text="Xóa"
                android:textAlignment="textStart"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btBuyBook"
                android:layout_width="116dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/stblack"
                android:drawableLeft="@drawable/shopping_cart_checkout"
                android:paddingLeft="5dp"
                android:text="Mua sách"
                android:textAlignment="textStart"
                android:textSize="15dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>